<Window x:Class="WpfApp.EmployeeLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="EmployeeLogin"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f0f4f8">

    <Grid>
        <Border Width="600"
                Padding="30"
                Background="White"
                CornerRadius="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel HorizontalAlignment="Center">
                <!-- Tiêu đề -->
                <TextBlock Text="PRN212 Assignment 01"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#2c3e50"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Building a Sales Order Management System using WPF and LINQ"
                           FontSize="16"
                           Foreground="#555"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,10,0,10"
                           HorizontalAlignment="Center"
                           Width="500"/>

                <TextBlock Text="Sales Management System (SMS)"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#34495e"
                           TextAlignment="Center"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <!-- Form login -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="300">
                    <TextBlock Text="Username:"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#333"
                               Margin="0,10,0,5"/>
                    <TextBox x:Name="txtUsername"
                             FontSize="16"
                             Height="30"
                             />

                    <TextBlock Text="Password:"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#333"
                               Margin="0,15,0,5"/>
                    <PasswordBox x:Name="txtPassword"
                                 FontSize="16"
                                 Height="30"/>

                    <!-- Nút -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button x:Name="btnEmployeeLogin"
                                Content="Login"
                                Width="100"
                                Height="35"
                                Margin="0,0,10,0"
                                Background="#2980b9"
                                Foreground="White"
                                FontWeight="Bold"
                                Click="btnEmployeeLogin_Click"/>

                        <Button x:Name="btnExit"
                                Content="Back"
                                Width="100"
                                Height="35"
                                Background="#cccccc"
                                Foreground="Black"
                                FontWeight="Bold"
                                Click="btnExit_Click"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
