<Window x:Class="WpfApp.Welcome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="SE183488_NguyenThanhTai_SE1848"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f0f4f8">

    <Grid>
        <!-- Container chính -->
        <Border Width="600"
                Padding="30"
                Background="White"
                CornerRadius="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="PRN212 Assignment 01"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#2c3e50"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Building a Sales Order Management System using WPF and LINQ"
                           FontSize="16"
                           Foreground="#555"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,10,0,10"
                           HorizontalAlignment="Center"
                           Width="500"/>

                <TextBlock Text="Sales Management System (SMS)"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#34495e"
                           TextAlignment="Center"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="300">
                    <Button x:Name="btnEmployeeLogin"
                            Content="Employee Login"
                            Height="45"
                            Margin="0,5"
                            Background="#2980b9"
                            Foreground="White"
                            FontSize="16"
                            Click="btnEmployeeLogin_Click"/>

                    <Button x:Name="btnCustomerLogin"
                            Content="Customer Login"
                            Height="45"
                            Margin="0,5"
                            Background="#27ae60"
                            Foreground="White"
                            FontSize="16"
                            Click="btnCustomerLogin_Click"/>

                    <Button x:Name="btnExit"
                            Content="Exit"
                            Width="118"
                            Height="38"
                            Margin="0,25,0,0"
                            Background="#c0392b"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Bold"
                            BorderBrush="#c0392b"
                            BorderThickness="1"
                            Cursor="Hand"
                            Click="btnExit_Click">
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
