<Window x:Class="WpfApp.OrderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Order Details"
        Height="340"
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f0f4f8">

    <Grid>
        <Border Background="White"
                CornerRadius="10"
                Padding="20"
                Width="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel>
                <TextBlock Text="Order Information"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#2c3e50"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <!-- Input fields -->
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Label Content="Order ID:" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtOrderID" Width="220"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Label Content="Customer ID:" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtCustomerID" Width="220"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Label Content="Employee ID:" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtEmployeeID" Width="220"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Label Content="Order Date:" Width="120" VerticalAlignment="Center"/>
                        <DatePicker x:Name="dpOrderDate" Width="220"/>
                    </StackPanel>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,30,0,0">
                    <Button x:Name="btnAdd"
                            Content="Add"
                            Width="110"
                            Height="38"
                            Margin="0,0,20,0"
                            Background="#27ae60"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="btnAdd_Click"/>

                    <Button x:Name="btnCancel"
                            Content="Cancel"
                            Width="110"
                            Height="38"
                            Background="#c0392b"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="btnCancel_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
