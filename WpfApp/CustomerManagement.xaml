<Window x:Class="WpfApp.CustomerManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        xmlns:vm="clr-namespace:WpfApp.ViewModel"
        mc:Ignorable="d"
        Title="CustomerManagement"
        Height="500"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#f0f4f8">

    <Window.DataContext>
        <vm:CustomerManagementViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <Border Background="White"
                CornerRadius="10"
                Padding="20"
                BorderBrush="#ccc"
                BorderThickness="1"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListView Grid.Row="0"
                          ItemsSource="{Binding Customers}"
                          SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}"
                          Margin="0,0,0,20"
                          Height="220">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Mã khách hàng" DisplayMemberBinding="{Binding CustomerID}" Width="100"/>
                            <GridViewColumn Header="Tên công ty" DisplayMemberBinding="{Binding CompanyName}" Width="150"/>
                            <GridViewColumn Header="Tên liên lạc" DisplayMemberBinding="{Binding ContactName}" Width="130"/>
                            <GridViewColumn Header="Tiêu đề liên lạc" DisplayMemberBinding="{Binding ContactTitle}" Width="130"/>
                            <GridViewColumn Header="Địa chỉ" DisplayMemberBinding="{Binding Address}" Width="150"/>
                            <GridViewColumn Header="SĐT" DisplayMemberBinding="{Binding Phone}" Width="100"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,15">
                    <Button Content="Back"
                            Width="90" Height="35"
                            Margin="0,0,10,0"
                            Click="btnBack_Click"
                            HorizontalAlignment="Left"
                            Background="#cccccc"
                            Foreground="Black"/>
                    <Button Content="Add Customer"
                            Width="120" Height="35"
                            Margin="0,0,10,0"
                            Background="#2ecc71"
                            Foreground="White"
                            FontWeight="Bold"
                            Command="{Binding AddCommand}"/>

                    <Button Content="Update Customer"
                            Width="120" Height="35"
                            Margin="0,0,10,0"
                            Background="#2980b9"
                            Foreground="White"
                            FontWeight="Bold"
                            Command="{Binding UpdateCommand}"/>

                    <Button Content="Remove Customer"
                            Width="140" Height="35"
                            Background="#c0392b"
                            Foreground="White"
                            FontWeight="Bold"
                            Command="{Binding RemoveCommand}"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Label Content="Tìm theo mã KH:"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Margin="0,0,10,0"/>

                    <TextBox Width="150"
                             Margin="0,0,10,0"
                             Text="{Binding SearchCustomerId, UpdateSourceTrigger=PropertyChanged}"/>

                    <Button Content="Search"
                            Width="80" Height="30"
                            Background="#f39c12"
                            Foreground="White"
                            FontWeight="Bold"
                            Command="{Binding SearchCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
